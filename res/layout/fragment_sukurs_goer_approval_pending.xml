<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="com.surkus.android.ASRSukursGoerDashboardActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/login_logo_imageview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_50"
        android:background="@drawable/top_navigation"
        android:orientation="vertical" >

        <Button
            android:id="@+id/menu_btn"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menubtn" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
             >

            <TextView
                android:id="@+id/account_status_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/account_pending"
                android:textColor="@color/pink"
                android:textSize="@dimen/text_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/user_profile_imageview"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_100"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/user_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/user_emailid_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/user_phone_number_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/user_address_number_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center_horizontal"
                android:text="@string/account_pending_msg"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_80"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/pink_background"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/thank_you_tell_us_more"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center_horizontal"
                android:text="@string/select_the_one_that_most_matches_you"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/favorite_social_time_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/input_box_white"
                android:hint="@string/favorite_times_to_socialize"
                android:inputType="textNoSuggestions"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/favorite_sports_time_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/input_box_white"
                android:hint="@string/favorite_times_to_socialize"
                android:inputType="textNoSuggestions"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_16" />

            <EditText
                android:id="@+id/favorite_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/input_box_white"
                android:hint="@string/favorite_times_to_socialize"
                android:inputType="textNoSuggestions"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/submit_favorites_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_30"
                android:layout_margin="@dimen/margin_5"
                android:background="@drawable/submitbtn"
                android:padding="@dimen/margin_10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_18" />

            <LinearLayout
                android:id="@+id/social_share_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100"
                android:background="@drawable/blue_background_top_arrow"
                android:orientation="vertical"
              >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>